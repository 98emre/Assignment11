@model IEnumerable<Storage.ViewModels.ProductViewModel>

@{
    ViewData["Title"] = "Inventory";
}

<h1>Inventory</h1>

<table class="table">
    <thead>
        <tr>
            <th> @Html.DisplayNameFor(model => model.Price) </th>
            <th> @Html.DisplayNameFor(model => model.Count) </th>
            <th> Inventory Value </th>
        </tr>
    </thead>
    <tbody>

@foreach (var item in Model) {
        <tr>
            <td> @Html.DisplayFor(modelItem => item.Price) </td>
            <td> @Html.DisplayFor(modelItem => item.Count) </td>
            <td> @Html.DisplayFor(modelItem => item.InventoryValue) </td>
        </tr>
}
    </tbody>

    <tfoot>
        <tr>
            <th>Total</th>
            <td class="text-end">@Model.Sum(productView => productView.InventoryValue)</td>
        </tr>
    </tfoot>
</table>

<a asp-action="Index" asp-controller="Products" class="btn btn-secondary">Return Back</a>

